generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  parentEmail String  
  name      String
  rollno    String
  password  String
  hostelName String
  parentAuth Boolean @default(false)
  adminAuth Boolean @default(false)
}
model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  hostelName String
}


model Guard {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
}
